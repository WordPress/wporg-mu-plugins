.wp-block-group.global-header {
	display: flex;
	align-items: flex-end;
	font-size: 21px;

	/*
	 * Some themes set a `z-index` on content elements that follow the header, like `#masthead` in
	 * `wporg-learn-2020`. If the global header doesn't have a higher index, then submenus will be
	 * covered up by the content when you hover over the parent menu item.
	 */
	position: relative;
	z-index: 250;

	@media (--tablet) {
		position: sticky;
		top: var(--wp-admin--admin-bar--height, 0);
		font-size: 13px;
	}

	& > * {
		flex-shrink: 0;
		padding: 60px var(--wp--style--block-gap) 17px;
		margin: 0;

		@media (--tablet) {
			padding-top: 37px;
			padding-bottom: 37px;
		}
	}

	& .global-header__search,
	& .global-header__navigation {
		padding: 0;

		& .wp-block-navigation__responsive-container-open {

			/* Magic numbers to center the 24px icon in 117px height. */
			padding: 70px var(--wp--style--block-gap) 23px;

			@media (--tablet) {
				padding-top: 37px;
				padding-bottom: 37px;
			}
		}
	}

	& button {
		background-color: transparent;
		border: none;
	}

	& .global-header__search-container,
	& .global-header__menu-container {
		flex-basis: calc(25px + ( var(--wp--style--block-gap) * 2 ));
		text-align: center;
	}

	& .global-header__close-search,
	& .global-header__close-menu {
		display: none;
	}

	& .wp-block-navigation__responsive-container-close {
		position: fixed;
		right: 0;
		top: var(--wp-admin--admin-bar--height, 0);
		padding-top: 70px; /* Magic numbers to center the 24px icon in 117px height. */
		padding-right: calc(var(--wp--style--block-gap) + var(--wp--custom--alignment--scroll-bar-width));
		padding-bottom: 23px; /* Magic numbers to center the 24px icon in 117px height. */
		padding-left: var(--wp--style--block-gap);
		background-color: var(--wp--preset--color--darker-grey);
	}
}
